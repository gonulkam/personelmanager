}

<table class="table table-danger">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Person person in Model)
        {
            <tr>
                <th scope="row">@person.Id</th>
                <td>@person.Name</td>
                <td>@person.Surname</td>
                <td>@person.Email</td>
                <td>@person.Age</td>
                <td><a asp-controller="Person" asp-action="GetById" asp-route-id="@person.Id"> detaya git...</a></td>
            </tr>
        }
       
        
       
    </tbody>
   </table>
    <div class="alert alert-primary" role="alert">
       Kişilerin Yaşları Toplamı:@ageSum

